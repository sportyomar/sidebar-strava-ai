{
  "cross_platform_binding_challenge": {
    "problem_statement": "Same dashboard data needs to render across platforms with completely different layout paradigms",
    "platforms": {
      "web": "CSS flexbox/grid, responsive, interactive",
      "powerpoint": "Fixed slide dimensions, text boxes, shapes",
      "pdf": "Page-based, fixed positioning, print optimization",
      "excel": "Cell-based grid, tabular data, formulas",
      "google_sheets": "Cell references, conditional formatting",
      "google_slides": "Slide-based, absolute positioning"
    }
  },

  "layout_binding_schema": {
    "metric_card_cross_platform": {
      "data_binding": {
        "title": "Revenue",
        "amount": "$847M",
        "trend": "up",
        "lines": ["data arrays"]
      },
      "layout_bindings": {
        "web": {
          "container": "flexbox",
          "position": "relative",
          "size": "auto",
          "responsive_breakpoints": ["mobile", "tablet", "desktop"]
        },
        "powerpoint": {
          "slide_position": {"x": 50, "y": 100},
          "dimensions": {"width": 200, "height": 150},
          "text_boxes": [
            {"content": "title", "position": {"x": 10, "y": 10}, "font_size": 16},
            {"content": "amount", "position": {"x": 10, "y": 40}, "font_size": 24}
          ],
          "shapes": [
            {"type": "rectangle", "position": {"x": 0, "y": 0}, "fill": "#f0f0f0"}
          ]
        },
        "pdf": {
          "page": 1,
          "coordinates": {"x": 72, "y": 720},
          "box_model": {"width": 144, "height": 108},
          "text_elements": [
            {"content": "title", "x": 82, "y": 810, "font": "Arial", "size": 12},
            {"content": "amount", "x": 82, "y": 790, "font": "Arial-Bold", "size": 18}
          ]
        },
        "excel": {
          "sheet": "Dashboard",
          "cell_range": "A1:C4",
          "cells": {
            "A1": {"content": "title", "format": "header"},
            "B1": {"content": "amount", "format": "currency"},
            "A2": {"formula": "=trend_formula", "format": "percentage"}
          }
        },
        "google_slides": {
          "slide_index": 0,
          "elements": [
            {
              "type": "text_box",
              "content": "title",
              "transform": {"scaleX": 1, "scaleY": 1, "translateX": 100, "translateY": 50}
            }
          ]
        }
      }
    }
  },

  "coordinate_system_mappings": {
    "web_to_powerpoint": {
      "coordinate_conversion": {
        "web_viewport": {"width": 1200, "height": 800},
        "ppt_slide": {"width": 720, "height": 540},
        "scale_factor": {"x": 0.6, "y": 0.675},
        "conversion_formula": {
          "ppt_x": "web_x * 0.6",
          "ppt_y": "web_y * 0.675"
        }
      },
      "layout_rules": {
        "metric_cards_row": {
          "web": "display: flex, justify-content: space-between",
          "powerpoint": "evenly spaced text boxes across slide width"
        },
        "company_table": {
          "web": "scrollable table component",
          "powerpoint": "table shape with max 8 rows per slide"
        }
      }
    },

    "web_to_excel": {
      "grid_mapping": {
        "metric_cards": {
          "web": "4 cards in horizontal row",
          "excel": "A1:D1 with each card in separate column"
        },
        "filter_panel": {
          "web": "sidebar component",
          "excel": "data validation dropdowns in row 2"
        },
        "company_table": {
          "web": "interactive table with sorting",
          "excel": "data table starting at A5 with Excel table formatting"
        }
      }
    },

    "responsive_breakpoint_mapping": {
      "web_mobile": {"width": 320},
      "web_tablet": {"width": 768},
      "web_desktop": {"width": 1200},
      "powerpoint_equivalent": {
        "mobile": "portrait slide orientation",
        "tablet": "4:3 aspect ratio slides",
        "desktop": "16:9 widescreen slides"
      }
    }
  },

