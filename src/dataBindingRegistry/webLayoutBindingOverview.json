{
  "web_layout_template_system": {
    "concept": "Same data, multiple layout arrangements through configuration-driven templates",
    "simplicity": "Much easier than cross-platform - same CSS/HTML paradigm, just different arrangements"
  },

  "layout_template_examples": {

    "executive_overview_layout": {
      "template_id": "exec_overview",
      "description": "KPIs prominent, tables condensed",
      "layout_config": {
        "metric_cards": {
          "position": "top_full_width",
          "size": "large",
          "columns": 4,
          "prominence": "high"
        },
        "company_tables": {
          "position": "bottom_half",
          "layout": "tabbed_sections",
          "row_limit": 5,
          "prominence": "medium"
        },
        "filters": {
          "position": "sidebar_collapsed",
          "visibility": "minimized"
        }
      }
    },

    "analyst_detail_layout": {
      "template_id": "analyst_detail",
      "description": "Tables prominent, filters accessible",
      "layout_config": {
        "metric_cards": {
          "position": "top_quarter",
          "size": "compact",
          "columns": 4,
          "prominence": "low"
        },
        "company_tables": {
          "position": "main_content",
          "layout": "full_tables_stacked",
          "row_limit": 50,
          "prominence": "high"
        },
        "filters": {
          "position": "sidebar_expanded",
          "visibility": "prominent"
        }
      }
    },

    "board_presentation_layout": {
      "template_id": "board_ready",
      "description": "Clean, minimal, large fonts",
      "layout_config": {
        "metric_cards": {
          "position": "center_grid",
          "size": "extra_large",
          "columns": 2,
          "prominence": "maximum"
        },
        "company_tables": {
          "position": "secondary_pages",
          "layout": "problems_only",
          "row_limit": 3,
          "prominence": "minimal"
        },
        "filters": {
          "position": "hidden",
          "visibility": "none"
        }
      }
    }
  },

  "binding_mechanism": {

    "data_layer": {
      "unchanged": "Same portfolio_companies array, same key_metrics object",
      "binding_points": [
        "data.metricCards → metric display logic",
        "filteredCompanies → table content",
        "selectedFilters → filter state"
      ]
    },

    "layout_layer": {
      "template_selector": "layout_template_id",
      "position_mapping": {
        "top_full_width": "grid-area: header / 1 / 2 / 5",
        "sidebar_expanded": "grid-area: sidebar; width: 300px",
        "main_content": "grid-area: main; overflow: auto"
      },
      "size_variants": {
        "large": "min-height: 200px; font-size: 1.2em",
        "compact": "min-height: 100px; font-size: 0.9em",
        "extra_large": "min-height: 300px; font-size: 1.5em"
      }
    }
  },

